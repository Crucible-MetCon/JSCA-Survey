# Railway Postgres connection string
DATABASE_URL=postgresql://user:password@host:5432/jcsa_survey

# Default admin credentials (used by seed script)
ADMIN_EMAIL=crucible@metcon.co.za
ADMIN_INITIAL_PASSWORD=change_me_immediately

# iron-session secret (must be 32+ characters)
SESSION_SECRET=change_this_to_a_random_32_char_string

# k-anonymity threshold (default: 5)
K_ANONYMITY_THRESHOLD=5

# Free text retention period in months (default: 12)
FREE_TEXT_RETENTION_MONTHS=12

# Server port (Railway provides this automatically)
PORT=3000

# Environment
NODE_ENV=production
